{
  "files": [
    {
      "path": "./dist/**/*.js",
      "maxSize": "250 kB",
      "compression": "gzip"
    },
    {
      "path": "./dist/**/*.css",
      "maxSize": "50 kB",
      "compression": "gzip"
    },
    {
      "path": "./dist/assets/*.js",
      "maxSize": "100 kB",
      "compression": "gzip"
    },
    {
      "path": "./dist/assets/*.css",
      "maxSize": "30 kB",
      "compression": "gzip"
    },
    {
      "path": "./dist/index.html",
      "maxSize": "10 kB",
      "compression": "gzip"
    }
  ],
  "ci": {
    "trackBranches": ["main", "develop"],
    "trackBundleSize": true,
    "baselineBranch": "main"
  }
}
